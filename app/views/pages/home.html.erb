<style>
  #ml_result {
    background: white;
    z-index: 1000;
    position: relative;
    padding: 10px;
    display:none;
  }
  #ml_result div {
    /*display:inline-block;*/
    display:none;
  }
  .failure {
    border-top: 2px solid red;
  }
  .success {
    border-top: 2px solid green;
  }
</style>

<script>
  var wm = "Enter your email address";
  function init() {
    $('#ml_submit').click(handle);
    addWatermark();
    $("#ml_email").blur(addWatermark);
    $("#ml_email").focus(removeWatermark);
  }
  function handle() {
    var email = $("#ml_email").val().trim();
    if (email.length == 0 || email.indexOf('@') == -1) {
      showError("Please enter a valid email address.");
      return;
    }

    $.ajax({
      url: '/submitemail?email=' + encodeURI(email),
      success:function(data){
        var result = parseInt(data['result']);
        if (result == 1) {
          success("Your email is already registered. Thank you!");
        } else {
          success("Thank you! We'll keep you posted on our progress.");
        }
      },
      error: function(data) {
        alert(data['status']+' '+data['responseText']);
        showError("There was a problem submitting your email. Please try again.");
      }
    });
  }
  function success(message) {
    $("#ml_result").removeClass('failure').addClass('success').css('display','inline-block');
    $("#ml_cross").css('display','none');
    $("#ml_check").css({ 'display': 'inline-block', 'float': 'left' });
    $("#ml_message").html(message).css('display','inline-block');
    $('#ml_submit').attr("disabled", true);
  }
  function showError(message) {
    $("#ml_result").addClass('failure').css('display','inline-block');
    $("#ml_cross").css({ 'display': 'inline-block', 'float': 'left' });
    $("#ml_message").html(message).css({ 'display': 'inline-block', 'margin': '3px 10px' });
  }
  function addWatermark() {
    if ($("#ml_email").val().length == 0) {
      $("#ml_email").val(wm).addClass("watermark");
    }
  }
  function removeWatermark() {
    $("#ml_email").val("").removeClass("watermark");
  }
  $(document).ready(init);
</script>
